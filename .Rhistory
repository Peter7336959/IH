# 函数：计算挥发性化学品A在空气中的平均浓度
calculate_CA <- function(MA, V, unit = "mg/m³") {
# 计算浓度 CA = MA / V
CA <- MA / V
# 根据单位选择输出
if (unit == "mg/m³") {
result <- CA
unit_label <- "mg/m³"
} else if (unit == "ppm") {
# 假设标准条件下（25°C, 1 atm）进行换算
# 需要知道化学品的分子量（MW）来进行ppm转换
# 由于问题未提供MW，这里需要用户输入
MW <- as.numeric(readline(prompt = "请输入化学品A的分子量 (g/mol): "))
# 转换公式: ppm = (mg/m³) * (24.45 / MW)
result <- CA * (24.45 / MW)
unit_label <- "ppm"
} else {
stop("单位必须是 'mg/m³' 或 'ppm'")
}
# 返回结果
return(list(concentration = result, unit = unit_label))
}
# 主程序
# 获取用户输入
MA <- as.numeric(readline(prompt = "请输入化学品A散布至空气中的总质量 (mg): "))
V <- as.numeric(readline(prompt = "请输入无通风室内的空气体积 (m³): "))
unit_choice <- readline(prompt = "请选择输出单位 (输入 'mg/m³' 或 'ppm'): ")
# 计算浓度
result <- calculate_CA(MA, V, unit = unit_choice)
